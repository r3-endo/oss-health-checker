{
  "name": "oss-health-checker",
  "private": true,
  "packageManager": "bun@1.1.43",
  "workspaces": [
    "apps/backend",
    "apps/batch",
    "apps/frontend",
    "apps/common"
  ],
  "scripts": {
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "bun run --filter '*' lint",
    "test": "bun run --filter '*' test",
    "format:check": "bun run --filter '*' format:check",
    "backend:dev": "bun run --filter oss-health-checker-api dev",
    "backend:test": "bun run --filter oss-health-checker-api test",
    "backend:boundary-contract": "bun run --filter oss-health-checker-api test:boundary-contract",
    "backend:typecheck": "bun run --filter oss-health-checker-api typecheck",
    "backend:lint": "bun run --filter oss-health-checker-api lint",
    "db:drizzle:generate": "bun run --filter oss-health-checker-api db:drizzle:generate",
    "db:drizzle:migrate": "bun run --filter oss-health-checker-api db:drizzle:migrate",
    "check:drizzle-drift": "bun run --filter oss-health-checker-api check:drizzle-drift",
    "batch:snapshots": "bun run --filter oss-health-checker-batch snapshots:collect",
    "batch:adoption": "bun run --filter oss-health-checker-batch adoption:snapshots:collect",
    "frontend:dev": "bun run --filter oss-health-checker-frontend-app dev",
    "frontend:test": "bun run --filter oss-health-checker-frontend-app test",
    "frontend:typecheck": "bun run --filter oss-health-checker-frontend-app typecheck",
    "frontend:lint": "bun run --filter oss-health-checker-frontend-app lint"
  }
}
