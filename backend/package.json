{
  "name": "oss-health-checker-backend",
  "private": true,
  "version": "0.1.0",
  "packageManager": "bun@1.1.43",
  "type": "module",
  "scripts": {
    "dev": "bunx tsx src/server.ts",
    "start": "bunx tsx src/server.ts",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx eslint . --ext .ts",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "test": "bunx vitest run",
    "test:openapi-contract": "bunx vitest run tests/contracts/openapi-route-binding.contract.test.ts",
    "db:drizzle:generate": "bunx drizzle-kit generate --config drizzle.config.ts",
    "db:drizzle:migrate": "bunx drizzle-kit migrate --config drizzle.config.ts",
    "check:drizzle-drift": "bun run db:drizzle:generate && bash scripts/check-drizzle-drift.sh"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/zod-openapi": "^1.2.1",
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "drizzle-kit": "^0.31.9",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
